@page
@model NotesApp.Pages.note.newnoteModel
@{
}



<br>
<h2>Create New Note</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form method="POST">
    <div class="row mb 3">
        <label class="col-sm-3 col-form-label ">Name</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="name" value="@Model.newnote.name">
        </div>
    </div>
    <div class="row mb 6">
        <label class="col-sm-3 col-form-label ">Description</label>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="description" value="@Model.newnote.description">
        </div>
</div>
        @if (Model.successMessage.Length > 0)
        {
            <div class="row-mb-3">
                <div class="col-sm-9">
                    <div class="alert alert alert-warning alert-dissmsible fade show " role="alert">
                        <strong>@Model.successMessage></strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </button>
                    </div>
                </div>
            </div>

        }
        <div class="row mb 3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class=" btn btn-primary">Add note</button>
            </div>
            <div class="col-sm-3 d-grid">
                <button type="submit" class="btn btn-outline-primary" href="/" role="button">Cancel</button>
            </div>

        </div>
    
</form>